            <p class="descripcion-prod">*Aca iria la descripcion de cada prod*</p>
        </div>

        <div class="precio-prod">$50</div>
            <div class="cantidad">
                <input type="number" value="1" min="1">
        </div>

        <div class="quitar-prod">
            <button class="quitar-prod">Quitar</button>
        </div>
        <div class="total-prod">$50</div>
        </div>


        <div class="carrito">
            <img 
            id = "foto"
                src = "~/imagenes/borraDona.jpeg">
        </div>

        <div class="detalles-prod">
