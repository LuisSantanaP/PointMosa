@{
    ViewData["Title"] = "Carrito";
}
<h1>@ViewData["Title"]</h1>

<form asp-asp-controller="Home" asp-action="Carrito">
    <body>
        
        <div class="carrito">
            <img 
            id = "foto"
                src = "~/imagenes/crayones.jpeg">
