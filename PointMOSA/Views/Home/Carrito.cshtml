            <p class="descripcion-prod">*Aca iria la descripcion de cada prod*</p>
        </div>

        <div class="precio-prod">$71</div>
            <div class="cantidad">
                <input type="number" value="1" min="1">
        </div>

        <div class="quitar-prod">
            <button class="quitar-prod">Quitar</button>
        </div>
        <div class="total-prod">$71</div>
        </div>


        <div class="carrito">
            <img 
            id = "foto"
                src = "~/imagenes/Fabuloso5L.jpeg">
        </div>

        <div class="detalles-prod">
            <div class="nom-prod">Fabuloso limpiador de 5L</div>
            <p class="descripcion-prod">*Aca iria la descripcion de cada prod*</p>
        </div>

        <div class="precio-prod">$125</div>
            <div class="cantidad">
                <input type="number" value="1" min="1">
        </div>

        <div class="quitar-prod">
            <button class="quitar-prod">Quitar</button>
        </div>
        <div class="total-prod">$125</div>
        </div>

